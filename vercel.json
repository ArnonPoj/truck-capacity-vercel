{
  "version": 1, 
  "builds": [
    {
      "src": "api/wsgi.py",
      "use": "@vercel/python" 
      // Vercel จะใช้ python3 เวอร์ชันล่าสุดที่รองรับ
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "api/wsgi.py"
    }
  ]
}
